<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/intro2Image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/dois" />

    <TextView

        android:id="@+id/intro2TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Saiba para onde está \n indo seu dinheiro"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/intro2DescText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Categorizando seus lançamentos e vendo o destino de cada centavo"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>